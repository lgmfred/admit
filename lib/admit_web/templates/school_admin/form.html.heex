<.form let={f} for={@changeset} action={@action}>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :role %>
  <%= text_input f, :role %>
  <%= error_tag f, :role %>

  <%= label f, :level %>
  <%= select f, :level, ["Level 1": "1", "Level 2": "2", "Level 3": "3"] %>
  <%= error_tag f, :level %>

  <div>
    <%= submit "Save" %>
  </div>
</.form>
